<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    
    <persistence-unit name="spkrPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <class>es.um.pds.spkr.modelo.Usuario</class>
        <class>es.um.pds.spkr.modelo.Estadisticas</class>
        <class>es.um.pds.spkr.modelo.Biblioteca</class>
        <class>es.um.pds.spkr.modelo.Curso</class>
        <class>es.um.pds.spkr.modelo.Leccion</class>
        <class>es.um.pds.spkr.modelo.Pregunta</class>
        <class>es.um.pds.spkr.modelo.PreguntaTest</class>
        <class>es.um.pds.spkr.modelo.PreguntaTraduccion</class>
        <class>es.um.pds.spkr.modelo.PreguntaHuecos</class>
        <class>es.um.pds.spkr.modelo.Progreso</class>
        <class>es.um.pds.spkr.modelo.ErrorFrecuente</class>
        
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:./spkr_db"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="false"/>
        </properties>
    </persistence-unit>
</persistence>